# =============================================================================
# Brand Analytics - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/brand_analytics_db

# -----------------------------------------------------------------------------
# Redis (Required for Celery)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# OpenAI (Required for brand messaging analysis)
# -----------------------------------------------------------------------------
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# -----------------------------------------------------------------------------
# Google APIs (Recommended for SEO analysis)
# -----------------------------------------------------------------------------
# PageSpeed Insights API - https://developers.google.com/speed/docs/insights/v5/get-started
PAGESPEED_API_KEY=

# Custom Search API (for indexing check) - https://developers.google.com/custom-search/v1/overview
GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# -----------------------------------------------------------------------------
# Social Media APIs (Optional - enhances analysis)
# -----------------------------------------------------------------------------
# Apify for social media scraping - https://apify.com/
APIFY_API_TOKEN=

# Twitter/X API (if available)
TWITTER_BEARER_TOKEN=

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Environment: development, staging, production
ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000
